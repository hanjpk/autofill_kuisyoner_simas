{
    "manifest_version": 3,
    "name": "AutoFill Radio Buttons",
    "version": "1.0",
    "description": "Automatically fills radio buttons in questionnaires.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}